<%- include("./partials/header", {title: "Reset Password"}); %>
<div class="form">
    <form action="/auth/resetPassword/<%=token%>" method="post">
        <h3 id="errorMsg" style="color: #8b0000; margin-top: 20px"><%= error_msg %></h3>
        <h3 id="successMsg" style="color: green; margin-top: 20px;"><%= success_msg %></h3>
        <h2>Reset Password</h2>
        <input type="password" name="password" placeholder="New Password" />
        <button type="submit" class="forgotPasswordBtn">Reset Passoword</button>
    </form>
</div>
<%- include("./partials/footer") %>