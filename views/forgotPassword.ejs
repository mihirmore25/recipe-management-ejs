<%- include("./partials/header", {title: "Forgot Password"}); %>
<div class="form">
    <form action="/auth/forgotPassword" method="post">
        <h3 id="errorMsg" style="color: #8b0000; margin-top: 20px"><%= error_msg %></h3>
        <h3 id="successMsg" style="color: green; margin-top: 20px;"><%= success_msg %></h3>
        <h2>Forgot Password</h2>
        <input type="email" name="email" placeholder="email" />
        <button type="submit" class="forgotPasswordBtn">Send Reset Link</button>
    </form>
</div>
<%- include("./partials/footer") %>