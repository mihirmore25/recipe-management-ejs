<%- include("./partials/header", {title: "Login"}); %>
<div class="form">
    <form action="/login" method="post">
        <% if (error_msg) { %>
            <h3 id="errorMsg">
                <%= error_msg %>
            </h3>
        <% } %>
        <% if (success_msg) { %>
            <h3 id="successMsg">
                <%= success_msg %>
            </h3>
        <% } %>
        <h2>Login</h2>
        <input type="email" name="email" placeholder="email" />
        <input type="password" name="password" placeholder="password" />
        <button type="submit" class="loginBtn" id="loginBtn">Login</button>
        <a href="/auth/forgotPassword" class="forgotPasswordBtn"
            >Forgot Password?</a
        >
    </form>
</div>
<%- include("./partials/footer") %>
